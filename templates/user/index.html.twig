{% extends 'layout.html.twig' %}

{% block title %}Administration - utilisateurs{% endblock %}

{% block main %}
    <section class="container my-4">
        <h1 class="my-3">Administration des utilisateurs</h1>
        <table class="table">
            <thead>
            <tr>
                <th>Nom d'utilisateur</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('admin_user_edit', {'id': user.id}) }}">edit</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock %}