<form method="post" action="{{ path('admin_technology_delete', {'id': technology.id}) }}" onsubmit="return confirm('Êtes-vous sûr(e) de vouloir supprimer cette technologie ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ technology.id) }}">
    <button  class="btn btn-danger">Delete</button>
</form>
