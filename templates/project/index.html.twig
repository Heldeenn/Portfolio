{% extends 'layout.html.twig' %}

{% block title %}Project index{% endblock %}

{% block main %}
    <h1>Project index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>DateStart</th>
                <th>DateEnd</th>
                <th>Description</th>
                <th>Client</th>
                <th>Github</th>
                <th>Website</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td>{{ project.id }}</td>
                <td>{{ project.name }}</td>
                <td>{{ project.dateStart ? project.dateStart|date('Y-m-d') : '' }}</td>
                <td>{{ project.dateEnd ? project.dateEnd|date('Y-m-d') : '' }}</td>
                <td>{{ project.description }}</td>
                <td>{{ project.client }}</td>
                <td>{{ project.github }}</td>
                <td>{{ project.website }}</td>
                <td>
                    <a href="{{ path('project_show', {'id': project.id}) }}">show</a>
                    <a href="{{ path('project_edit', {'id': project.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('project_new') }}">Create new</a>
{% endblock %}
