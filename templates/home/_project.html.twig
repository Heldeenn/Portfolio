<section class="container project my-5">
    <h2 class="text-center">Mes diff√©rents projets</h2>
    <div class="d-flex flex-wrap justify-content-center mt-4 justify-content-lg-between">
        {% for project in projects %}
            <div class="card my-4 mx-3 col-lg-3 col-md-4 col-10 p-0">
                <img class="card-img-top" src="{{ vich_uploader_asset(project, 'thumbnailFile') }}" alt="{{ project.thumbnail }}">
                <div class="card-body">
                    <h3 class="card-title">{{ project.name }}</h3>
                    <a href="{{ path('details', {'id': project.id}) }}" class="btn btn-outline-primary">En savoir plus</a>
                </div>
            </div>
        {% endfor %}
    </div>
</section>
